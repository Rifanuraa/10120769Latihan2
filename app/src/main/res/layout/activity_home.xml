<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_header_profile"
        android:scaleType="fitXY"
        android:outlineSpotShadowColor="@color/black"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_side_menu"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notification"
        android:layout_marginLeft="365dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profile_picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:src="@drawable/profile"
        app:civ_border_color="@color/white"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/black"
        app:civ_shadow_radius="5dp" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_picture"
        android:layout_marginTop="15dp"
        android:text="Rifa Nur Anisa"
        android:textColor="@color/lightblue"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/BT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama"
        android:layout_marginTop="5dp"
        android:text="Blood Type : O"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        />

    <View
        android:layout_below="@id/BT"
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/separator"/>

    <LinearLayout
        android:id="@+id/num_stat"
        android:layout_below="@id/separator1"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75"
            android:textSize="35dp"
            android:textColor="@color/lightblue"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/num_bloodgive"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="35dp"
            android:textColor="@color/lightblue"
            android:layout_marginLeft="65dp"
            android:id="@+id/num_bloodreceived"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="330"
            android:textSize="35dp"
            android:textColor="@color/lightblue"
            android:layout_marginLeft="65dp"
            android:id="@+id/num_thanks"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/num_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_stat"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Give"
            android:textAllCaps="true"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Blood Received "
            android:layout_marginLeft="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="thanks"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

    <View
        android:id="@+id/separator2"
        android:layout_below="@id/name_stat"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/separator"/>

    <LinearLayout
        android:layout_below="@id/separator2"
        android:id="@+id/iconHome1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="15dp" >

        <!-- Media -->
        <ImageView
            android:id="@+id/search_blood"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_search_donor"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Donor"
            android:textSize="20dp"
            android:textColor="@color/Fonttitle"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Search donor near you"
                android:textColor="@color/fontdesc"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">
            <!-- Media -->

            <ImageView
                android:id="@+id/blood_needed"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_blood_needed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Needed"
                android:textSize="20dp"
                android:textColor="@color/Fonttitle"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="4 Users need blood"
                android:textColor="@color/fontdesc"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/iconHome1"
        android:id="@+id/iconHome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp">

            <!-- Media -->
            <ImageView
                android:id="@+id/message"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/ic_message"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message"
                android:textSize="20dp"
                android:textColor="@color/Fonttitle"
                android:layout_marginHorizontal="48dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:text="5 New Message"
                android:textColor="@color/fontdesc"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">
            <!-- Media -->

            <ImageView
                android:id="@+id/donor_history"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/ic_donor_history" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="Donor History"
                android:textColor="@color/Fonttitle"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:text="5 Gives, 2 Received"
                android:textColor="@color/fontdesc"
                android:textSize="15dp"
                tools:ignore="TextSizeCheck" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>